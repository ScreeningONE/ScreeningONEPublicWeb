.page.compliance-corner {
  .hero .wrapper {
    background: #33293e;
  }

  .sample-compliance {
    padding: 50px 0;

    .small-title {
      color: $secondary-color;
    }

    h2.title {
      font-size: 36px;
      color: $secondary-color;
      margin: 25px 0;
    }

    .compliance-content {
      max-height: 420px;
      overflow: hidden;
      position: relative;

      &:after {
        content: "";
        width: 100%;
        height: 100px;
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        background: -moz-linear-gradient(top,  rgba(255,255,255,0.01) 0%, rgba(255,255,255,1) 100%);
        background: -webkit-linear-gradient(top,  rgba(255,255,255,0.01) 0%,rgba(255,255,255,1) 100%);
        background: linear-gradient(to bottom,  rgba(255,255,255,0.01) 0%,rgba(255,255,255,1) 100%);
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#03ffffff', endColorstr='#ffffff',GradientType=0 );

      }
    }

    p {
      font-size: 17px;
      line-height: 170%;
    }
  }

  .read-latest {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-align-items: center;
    align-items: center;

    border-radius: 3px;
    margin: 40px 0 15px;
    min-height: 160px;
    color: #fff;
    background: $secondary-color;
    padding: 15px 20px 20px;

    &.anotherone {
      background: #c0a02f;
    }

    p {
      font-size: 25px;
      font-weight: 300;
      margin: 0 0 10px;

      strong {
        font-weight: 500;
      }
    }

    .btn {
      font-size: 17px;
      text-transform: uppercase;
      text-align: center;
      padding: 13px 0;
      margin: 10px 0 0;
      width: 100%;
      color: $secondary-color;
      font-weight: bold;
    }
  }

  .regular-updates {
    border: 1px solid #c8c8c8;
    border-radius: 5px;
    overflow: hidden;

    .title {
      text-transform: uppercase;
      font-weight: bold;
      padding: 10px 15px;
      font-size: 12px;
      color: #2e4151;
      background: #f9f9fa;
      border-bottom: 1px solid #bdbdbd;
    }

    &-header {
      padding: 20px;
      color: $brand-primary;
      background: #f3f3f3 url(<%= asset_path 'img/compliance-corner-form.png' %>) no-repeat bottom;
      background-size: cover;
      height: 300px;

      p {
        font-size: 23px;
        line-height: 120%;

        strong {
          font-weight: 600;
        }
      }
    }
  }

  form {
    .form-textbox-wrap {
      padding: 10px 15px;
      position: relative;
      border-top: 1px solid #bdbdbd;

      input, select {
        position: relative;
        z-index: 5;
        display: block;
        padding: 0;
        border: 0;
        width: 100%;
        outline: 0;
        font-size: 20px;
        margin-top: 20px;
        background: transparent;

        &:focus + label {
          color: $brand-primary;
          background: lighten($brand-primary, 47);
        }
      }

      select {
        &:invalid,
        option:first-child {
          color: #A9A9A9;
        }
      }

      label {
        display: block;
        position: absolute;
        z-index: 3;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        height: 100%;
        width: 100%;
        padding: 10px 0 0 15px;
      }
    }

    .btn {
      border-radius: 0;
      text-transform: initial;
      font-size: 20px;
      padding: 25px 0;
    }

    .notice {
      p {
        font-size: 14px;
        margin: 0;
        padding: 10px 15px;
        line-height: 100%;
      }
    }
  }

  .earlier-reports {
    padding: 20px 25px;
    border-radius: 5px;
    background: #f5f8fb;
    color: $secondary-color;
    border: 1px solid #b3b3b3;
    margin: 23px 0 0;

    .title {
      text-transform: uppercase;
      font-size: 13px;
      letter-spacing: 1px;
      margin-bottom: 20px;
      font-weight: bold;
    }

    a {
      font-size: 15px;
      display: block;
      margin: 0 0 15px;
      color: $secondary-color;
      font-weight: bold;
    }
  }
}