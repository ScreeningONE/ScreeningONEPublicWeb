/**
 * .see-your-roi
 */

.page.roi {
  @include hero-bg("<%= asset_path 'img/hero/roi-calculator-graph-hero.png' %>", rgba(#30273a, 0.77));

  .hero {
    background-size: contain;
    background-position: center bottom;

    @media(min-width: 900px) {
      background-size: auto;
    }

    .icon-arrow-down {
      width: 100%;
      max-height: 300px;
      height: 31vw;
      background: none;
    }
  }
}

.see-your-roi {
  background: #f5f8fb;

  .onboard-form, .your-savings {
    border: 1px solid #d0d0d0;
    background: #fff;
    text-align: center;
    position: relative;
    width: 1000px;
    max-width: 100%;
    margin: 0 auto;
  }

  .onboard-form {
    padding: 25px 15px;
    margin-bottom: 72px;
    top: -55px;

    &:before, &:after {
      content: "";
      position: absolute;
      right: 0;
      left: 0;
      margin: 0 auto;
      display: block;
    }

    &:before {
      width: 41px;
      height: 41px;
      background: #fff;
      border: 2px solid $secondary-color;
      border-radius: 50%;
      bottom: -20px;
    }

    &:after {
      background: url($icon-sprite) no-repeat -7px -91px;
      width: 6px;
      height: 58px;
      bottom: -90px;
    }

    label {
      font-weight: 300;
      font-size: 32px;
      display: inline-block;
      vertical-align: middle;
      margin-right: 30px;
    }

    .input-group {
      vertical-align: middle;
      overflow: hidden;
      display: inline-block;
    }

    input {
      float: left;

      &#num-onboard {
        width: 60%;
        padding: 10px 15px;
        height: auto;
        border: 1px solid #dfdfdf;
        border-top-left-radius: 3px;
        border-bottom-left-radius: 3px;
        font-size: 22px;
        line-height: 23px;
      }

      &.btn {
        padding: 11px 0;
        border-radius: 0;
        width: 40%;
        border-top-right-radius: 3px;
        border-bottom-right-radius: 3px;
        line-height: 23px;
      }
    }
  }

  .your-savings {
    padding: 40px 15px;

    &:before {
      content: attr(data-text);
      display: block;
      position: absolute;
      left: 0;
      right: 0;
      margin: 0 auto;
      top: -25px;
      padding: 10px 0;
      width: 200px;
      max-width: 100%;
      border-radius: 25px;
      font-size: 22px;
      background: $secondary-color;
      color: #fff;
      font-weight: 300;
    }

    .amount {
      font-size: 50px;
      color: $secondary-color;
    }
  }
}