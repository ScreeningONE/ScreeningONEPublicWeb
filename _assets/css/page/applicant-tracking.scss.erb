<%
about_drug_testing = {
  :uu => '#32358d',
  :ur => '#31628d',
  :ma => '#3d2748',
  :ca => '#c0a02f',
  :bc => '#364f70',
  :hc => '#22a59d',
}
%>
/**
 * .about-drug-testing
 */

.page.applicant-tracking {
  @include wave-hero();

  .hero {
    h1.title {
      font-size: 32px;
    }
  }
}

.about-drug-testing {
  padding: 50px 0;

  .header {
    text-align: center;

    .desc {
      width: 700px;
      max-width: 100%;
      font-size: 19px;
      line-height: 170%;
      margin: 20px auto 50px;
    }
  }

  .footer {
    margin-top: 30px;

    .btn {
      font-size: 13px;
      padding: 10px 0;
      width: 300px;
    }
  }

  .about {
    color: #fff;
    padding: 15px;
    border: 1px solid #b3b3b3;
    border-radius: 3px;
    margin-bottom: 30px;

    @media(min-width: $screen-sm-min) {
      padding: 20px;
    }

    @media(min-width: $screen-md-min) {
      padding: 30px;
    }

    .symbol {
      font-weight: 300;
      font-size: 90px;
      line-height: 100%;
      text-align: center;
    }

    .title {
      @include font-size(19px);
      margin: 30px 0;
      font-weight: 600;
    }

    .desc {
      p {
        @include font-size(15px);

        a {
          font-weight: 600;
          color: #fff;
        }
      }
    }
  }

  <% about_drug_testing.each_with_index do |(key, value), index| %>
    .about-<%= key %> {
      background: <%= value %>;
    }
  <% end %>
}