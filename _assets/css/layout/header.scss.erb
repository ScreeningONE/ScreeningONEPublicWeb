$custom-navbar-padding-vertical: (($navbar-height - $line-height-computed) / 2);

.navbar {
  border: 0;
  margin: 0;
}

.navbar-header {
  white-space: nowrap;
}

.navbar-brand {
  width: 280px;
  height: 100px;
  background: url($logo) no-repeat center;
  display: inline-block;
  vertical-align: middle;
}

.navbar-phone {
  @include font-size(13px);
  display: inline-block;
  padding: $custom-navbar-padding-vertical 0;

  @media(min-width: $screen-lg-min) {
    @include font-size(15px);
  }
}

.navbar-nav {
  font-weight: 600;
  @include font-size(15px);

  > li {

    @media(min-width: $grid-float-breakpoint) {
      padding: $custom-navbar-padding-vertical 0;
      height: 100px;

      a {
        padding: 0 13px; //readjusting from adding compliance corner
      }
    }

    > a.btn {
      color: #fff;
      @include font-size(11px);
      padding: 6px 30px;
      margin: 15px;

      @media(min-width: $grid-float-breakpoint) {
        margin: -5px 0 0 15px;
      }

      &:hover {
        background: $brand-primary;
        color: $btn-primary-color;
      }
    }

    &.dropdown {
      a.dropdown-toggle {
        &:after {
          content: "";
          display: inline-block;
          background: url($icon-sprite) no-repeat -60px -84px;
          margin-left: 10px;
          width: 11px;
          height: 7px;
        }
      }
      ul.dropdown-menu {
        top: ($custom-navbar-padding-vertical + 30px);
        -webkit-box-shadow: 0 0 0;
        box-shadow: 0 0 0;
      }
    }
  }
}