.page.simple-page {
  .hero .wrapper {
    background: rgba(#2f2639, 0.86);
  }
}

.simple-page-content {
  padding: 30px 15px;
  font-size: 16px;
  line-height: 170%;

  @media(min-width: $screen-md-min) {
    padding: 60px 0;
  }

  h2.title {
    margin: 30px 0;
  }

  strong {
    font-weight: 600;
  }

  p {
    margin-bottom: 25px;

    &:last-child {
      margin: 0;
    }
  }

  ul {
    margin: -20px 0 5px;
  }
}
