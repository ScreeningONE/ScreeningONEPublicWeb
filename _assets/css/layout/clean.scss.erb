body.clean-layout {

  footer {
    background: #5b318d;
    padding-bottom: 0;

    .footer-brand {
      background: url($clean-footer-logo) no-repeat center;
      background-size: contain;
      width: 208px;
      height: 42px;
      margin: 0 auto 30px;

      @media(min-width: $screen-md-min) {
        margin-left: 0;
        margin-right: 0;
      }
    }

    h2 {
      color: #fff;
      margin: 0 0 30px;
      font-size: 30px;
      font-weight: 300;
    }

    p {
      color: #fff;
      font-size: 16px;
      line-height: 160%;
    }
  }
}
