.page {
  overflow-x: hidden;
}

.container {
  @media(min-width: $grid-float-breakpoint) {
    width: 1170px;
    max-width: 100%;
  }
}

.btn {
  @include font-size(12px);
  font-weight: 600;
  text-transform: uppercase;
  vertical-align: middle;
  letter-spacing: 1px;
  padding: 10px 30px;
  max-width: 100%;
  text-align: center;
  border: 0;

  &.btn-primary {
    color: #fff;

    &:hover {
      background: darken($brand-primary, 2);
      color: $btn-primary-color;
    }
  }

  &.btn-default {
    &:hover {
      background: darken(#fff, 2);
    }
  }

}

p {
  a {
    font-weight: 600;
    color: $brand-primary;

    &:hover {
      color: $brand-primary;
      text-decoration: underline;
    }
  }
}

.small-title {
  @include font-size(13px);
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 1px;
}

h2.title {
  margin: 0;
  font-weight: 300;
  font-size: 36px;
}

.page.single-page {
  .hero .wrapper {
    background: rgba(#2f2639, 0.86);
  }
}

.single-page-content {
  padding: 30px 15px;
  font-size: 16px;
  line-height: 170%;

  @media(min-width: $screen-md-min) {
    padding: 60px 0;
  }

  h2.title {
    margin: 30px 0;
  }

  strong {
    font-weight: 600;
  }

  p {
    margin-bottom: 25px;

    &:last-child {
      margin: 0;
    }
  }

  ul {
    margin: -20px 0 5px;
  }
}

.big-signature-logo {
  background: url(<%= asset_path 'img/big-logo.png' %>) no-repeat center;
  width: 483px;
  height: 71px;
}