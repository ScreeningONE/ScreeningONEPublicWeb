.page {
  overflow-x: hidden;
}

.container {
  @media(min-width: $grid-float-breakpoint) {
    width: 1170px;
    max-width: 100%;
  }
}

.btn {
  @include font-size(12px);
  font-weight: 600;
  text-transform: uppercase;
  vertical-align: middle;
  letter-spacing: 1px;
  padding: 10px 30px;
  max-width: 100%;
  text-align: center;
  border: 0;

  &.btn-primary {
    color: #fff;

    &:hover {
      background: darken($brand-primary, 2);
      color: $btn-primary-color;
    }
  }

  &.btn-default {
    &:hover {
      background: darken(#fff, 2);
    }
  }

}

p {
  a {
    font-weight: 600;
    color: $brand-primary;

    &:hover {
      color: $brand-primary;
      text-decoration: underline;
    }
  }
}

.small-title {
  @include font-size(13px);
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 1px;
}

h2.title {
  margin: 0;
  font-weight: 300;
  font-size: 36px;
}