$accreditations-bg: #f5f8fb;
$accreditations-text-color: $secondary-color;

.accreditations {
  background: $accreditations-bg;
  text-align: center;
  padding: 30px 0 15px;

  .small-title {
    color: $accreditations-text-color;
  }

  .logos {
    list-style: none;
    padding: 0;
    margin: 15px 0 0;

    li {
      list-style: none;
      padding: 0;
      margin: 15px;
      vertical-align: middle;
      display: inline-block;
      background-image: url(<%= asset_path 'img/accreditations.png' %>);
      background-repeat: no-repeat;

      &.kia {
        background-position: -6px -7px;
        width: 100px;
        height: 53px;
      }

      &.hampton {
        background-position: -220px -8px;
        width: 98px;
        height: 64px;
      }

      &.bgc {
        background-position: -105px -58px;
        width: 116px;
        height: 58px;
      }

      &.goodwill {
        background-position: -343px -63px;
        width: 46px;
        height: 60px;
      }
    }
  }
}