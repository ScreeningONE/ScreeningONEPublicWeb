.screenshot-feature {
  padding: 30px 0;
  min-height: 520px;
  text-align: center;

  @media(min-width: $screen-md-min) {
    margin: 0;
    padding: 70px 0;
    text-align: left;
  }

  .container {
    position: relative;
  }

  .small-title {
    margin: 20px 0 10px;
  }

  h2.title {
    margin: 0 0 20px;
    font-size: 32px;
  }

  .sub-title {
    @include font-size(20px);
    margin: 20px 0;
  }

  .desc {
    width: 480px;
    max-width: 100%;
    margin: 0 auto;

    @media(min-width: $screen-md-min) {
      margin: 0;
    }

    p {
      font-size: 15px;
      line-height: 160%;
    }
  }

  .screenshot {
    max-width: 100%;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    margin: 30px auto 0;
    -webkit-box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.14);
    -moz-box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.14);
    box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.14);

    @media(min-width: $screen-md-min) {
      margin: 0;
      max-width: initial;
      position: absolute;
    }
  }
}