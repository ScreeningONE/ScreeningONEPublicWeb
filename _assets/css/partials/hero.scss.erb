@mixin hero-bg($url, $bg-color: rgba($brand-primary, 0.86)) {
  .hero {
    background-image: url($url);
    .wrapper {
      background: $bg-color;
    }
  }
}

@mixin wave-hero() {
  @include hero-bg("<%= asset_path 'img/hero/wave-hero.png' %>", rgba(#432c51, 0.86));
}

@mixin page-hero() {
  @include hero-bg("<%= asset_path 'img/hero/page-hero.png' %>", rgba(#2f2639, 0.86));
}

.hero {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  color: #fff;
  text-align: center;

  .wrapper {
    padding: 50px 15px 30px;
  }

  .icon-arrow-down {
    display: block;
    margin: 20px auto 0;
    background: url($icon-sprite) no-repeat -90px -44px;
    width: 23px;
    height: 13px;
    cursor: pointer;
    }

  .small-title {
    margin-bottom: 10px;
  }

  .title {
    font-weight: 600;
    line-height: 100%;
    max-width: 100%;
    margin: 0 auto;
    font-size: 36px;

    @media(min-width: $screen-sm-min) {
      font-size: 56px;
    }
  }

  .list {
    text-align: left;
    overflow: hidden;
    margin: 30px auto;
    padding: 0;
    list-style: none;
    width: 800px;
    max-width: 100%;

    li {
      @include font-size(18px);
      margin: 20px;
      float: left;

      &:nth-child(even) {
        float: right;
      }

      &:before {
        content: "";
        display: inline-block;
        vertical-align: -7px;
        margin-right: 20px;
        background: url($icon-sprite) no-repeat -74px -4px;
        width: 27px;
        height: 27px;
      }
    }
  }

  .desc {
    @include font-size(16px);
    width: 700px;
    max-width: 100%;
    margin: 20px auto 0;
  }
}