@mixin hero-bg($url) {
  .hero {
    background-image: url($url);
    .wrapper {
      background: rgba($brand-primary, 0.86);
    }
  }
}

@mixin wave-hero() {
  @include hero-bg("<%= asset_path 'img/hero/wave-hero.png' %>");

  .hero {
    .wrapper {
      background: rgba(#372d42, 0.86);
    }
  }
}

.hero {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  color: #fff;
  text-align: center;

  .wrapper {
    padding: 50px 15px 30px;
  }

  .icon-arrow-down {
    display: block;
    margin: 20px auto 0;
    background: url($icon-sprite) no-repeat -90px -44px;
    width: 23px;
    height: 13px;
    cursor: pointer;
    }

  .small-title {
    margin-bottom: 10px;
  }

  .title {
    font-weight: 600;
    line-height: 100%;
    max-width: 100%;
    margin: 0 auto;
    font-size: 36px;

    @media(min-width: $screen-sm-min) {
      font-size: 56px;
    }
  }

  .desc {
    @include font-size(16px);
    width: 700px;
    max-width: 100%;
    margin: 0 auto;
    margin-top: 20px;
  }
}