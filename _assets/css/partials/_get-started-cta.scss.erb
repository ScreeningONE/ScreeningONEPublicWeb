.get-started-cta {
  background: url(<%= asset_path 'img/cta-get-started.png' %>) no-repeat;
  background-size: cover;
  background-position: center top;
  color: #fff;

  .wrapper {
    background: rgba($brand-primary, 0.86);
    padding: 70px 0;
  }

  h2.title {
    margin: 5px 0 10px;
  }

  .desc {
    width: 500px;
    max-width: 100%;

    p {
      font-size: 16px;
      line-height: 160%;
    }
  }

  .btn {
    font-size: 17px;
    font-weight: bold;
    padding: 20px 0;
    display: block;
    border-radius: 30px;
    margin-top: 30px;
  }

  .contact-sales {
    @include font-size(20px);
    margin-top: 20px;
    text-align: center;
  }
}