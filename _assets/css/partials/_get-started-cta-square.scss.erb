.get-started-cta-square {
  background: #f5f8fb;
  padding: 30px 0;
  text-align: center;

  @media(min-width: $screen-md-min) {
    padding: 70px 0;
    text-align: left;
  }

  h2.title {
    @include font-size(32px);
    color: $secondary-color;
    text-align: center;
    margin-bottom: 50px;
  }

  ul {
    color: #2b333f;
    padding: 0;
    margin: 0;
    list-style: none;

    li {
      margin-bottom: 50px;
    }

    .small-title {
      color: $secondary-color;
      font-weight: 700;
      margin-bottom: 15px;
    }

    .desc {
      p {
        font-size: 16px;
        line-height: 150%;
      }
    }
  }

  .cta {
    background: url(<%= asset_path 'img/cta-get-started-square.png' %>) no-repeat;
    background-size: cover;
    color: #fff;
    text-align: center;

    .cta-container {
      padding: 80px 0 50px;
      background: rgba(#000, 0.64);
    }

    .small-title {
      @include font-size(15px);
    }

    h3.title {
      @include font-size(35px);
      margin: 10px 0 30px;
    }

    .desc {
      max-width: 100%;
      width: 500px;
      margin: 0 auto;
      font-size: 16px;

      p {
        @include font-size(18px);
        line-height: 160%;
      }
    }

    .btn {
      @include font-size(17px);
      background: #fff;
      color: $brand-primary;
      font-weight: bold;
      padding: 10px 0;
      max-width: 100%;
      width: 270px;
      margin: 20px 0;
    }
  }
}